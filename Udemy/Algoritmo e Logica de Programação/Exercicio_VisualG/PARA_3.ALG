Algoritmo "para_3_Prog_e_Regre"
//Apresendedo a sitaxe do "para"

Var
   i : inteiro

Inicio
      escreval("Contagem Progressiva")
      para i de 1 ate 5 faca
           escreval("Valor de i: ", i)
      fimpara
      
      escreval
      escreval("Contagem Regressiva")
      
      para i de 5 ate 1 passo -1 faca
           escreval("Valor de i: ", i)
      fimpara
      
Fimalgoritmo